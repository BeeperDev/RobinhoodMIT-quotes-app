<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Robin Hood Quote App</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <h1 data-position="header">May Node and Express be with you.</h1>

    <section data-position="add-quote">
        <h2>Add Quote</h2>
        <form action="/quotes" method="POST">
            <input type="text" placeholder="name" name="name" />
            <input type="text" placeholder="quote" name="quote" />
            <button type="submit">Submit</button>
        </form>
    </section>


    <section data-position="quotes">
        <h2> Quotes </h2>
        <ul class="quotes">
            <!-- Loop through quotes -->
            <% for(var i=0; i < quotes.length; i++) {%>
                <li class="quote">    <!-- Output name from the iterated quote object -->
                    <span><%= quotes[i].name %></span>:
                    <span><%= quotes[i].quote %></span>
                </li>
            <% } %>
        </ul>
    </section>

    <section data-position="update-quote">
        <div>
            <h2>Prince John invades!</h2>
            <p>
                Replace first Robin Hood quote with a quote written by Prince John
            </p>
            <button id="update-button">Replace Robin Hood's quote</button>
        </div>
    </section>

    <section data-position="delete-quote">
        <div>
            <h2>Remove Prince John!</h2>
            <p>
                Delete one Prince John quote. Does nothing if there are no more Prince John quotes
            </p>
            <button id="delete-button">Delete Prince John quote</button>
        </div>
        <div id="message"></div>
    </section>

    <script src="/main.js"></script>

</body>

</html>